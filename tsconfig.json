{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "lib/**/*.ts",
    "routes/**/*.ts",
    "shared/**/*.ts",
    "bin/**/*.ts",
    "mcp/**/*.ts",
    "server.ts",
    "install-daemon.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
